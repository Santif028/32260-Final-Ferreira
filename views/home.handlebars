<div class="containerProducts">
    <h1>All products</h1>
    {{#if user}}
    <h2>Welcome {{user.user}}</h2>
    {{else}}
    {{/if}}
    <div>
        <h3>Ordenar por precio</h3>
        <button class="btn btn-outline-success" onclick="sortAsc('{{sort}}')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-sort-down-alt" viewBox="0 0 16 16">
                <path
                    d="M3.5 3.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 12.293V3.5zm4 .5a.5.5 0 0 1 0-1h1a.5.5 0 0 1 0 1h-1zm0 3a.5.5 0 0 1 0-1h3a.5.5 0 0 1 0 1h-3zm0 3a.5.5 0 0 1 0-1h5a.5.5 0 0 1 0 1h-5zM7 12.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7a.5.5 0 0 0-.5.5z" />
            </svg>

        </button>
        <button class="btn btn-outline-secondary" onclick="sortDes('{{sort}}')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-down"
                viewBox="0 0 16 16">
                <path
                    d="M3.5 2.5a.5.5 0 0 0-1 0v8.793l-1.146-1.147a.5.5 0 0 0-.708.708l2 1.999.007.007a.497.497 0 0 0 .7-.006l2-2a.5.5 0 0 0-.707-.708L3.5 11.293V2.5zm3.5 1a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM7.5 6a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zm0 3a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1h-3zm0 3a.5.5 0 0 0 0 1h1a.5.5 0 0 0 0-1h-1z" />
            </svg>
        </button>
    </div>
    <div>
        {{#if query}}
        {{else}}
        <h3>Separar por categoria</h3>
        {{#each categories}}
        <button class="btn btn-outline-primary" onclick="addQuery('{{this}}')">{{this}}</button>
        {{/each }}
        {{/if}}
    </div>
    <button class="btn btn-outline-danger" onclick="removeFilters()">Remover Filtros</button>
    <div class="products">
        {{#each products.docs}}
        <div class="card" style="width: 18rem;">
            <img src={{this.thumbnail}} class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column align-items-center">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.category}}</p>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">Price: ${{this.price}}</p>
                <a href="api/products/{{this._id}}" class="btn btn-primary">More details</a>
            </div>
        </div>
        {{/each}}
    </div>
    <div>
        <nav aria-label="...">
            <ul class="pagination">
                {{#if hasPrevPage}}
                <li class="page-item"><a class="page-link" onclick="prevPage('{{page}}')">Previous</a></li>
                {{else}}
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
                {{/if}}
                <li class="page-item active" aria-current="page">
                    <span class="page-link">{{page}}</span>
                </li>
                {{#if hasNextPage}}
                <li class="page-item"><a class="page-link" onclick="nextPage('{{page}}')">Next</a></li>
                {{else}}
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
                {{/if}}
            </ul>
        </nav>
    </div>
</div>
<script src="/js/filters.js"></script>c